{
  "name": "hikibiki-app",
  "version": "0.0.1",
  "description": "Look up words and stuff",
  "main": "src/main.tsx",
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@fullhuman/postcss-purgecss": "^2.2.0",
    "@relative-ci/agent": "^1.4.0",
    "@storybook/preact": "~6.1.14",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^7.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.1",
    "html-webpack-plugin": "^4.5.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "mini-css-extract-plugin": "^1.3.4",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.2.1",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "webpack": "^5.17.0",
    "webpack-cli": "^4.4.0",
    "webpack-dev-server": "^3.11.2"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack",
    "build:stats": "cross-env NODE_ENV=production webpack --json > webpack-stats.json",
    "start": "webpack serve --content-base dist",
    "storybook": "start-storybook -p 9001 -c .storybook -s dist",
    "build:storybook": "build-storybook -c .storybook -s dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/birchill/hikibiki-app.git"
  },
  "keywords": [
    "kanji",
    "漢字"
  ],
  "author": "Brian Birtles",
  "bugs": {
    "url": "https://github.com/birchill/hikibiki-app/issues"
  },
  "homepage": "https://hikibiki.app/",
  "dependencies": {
    "@birchill/hikibiki-data": "^7.0.1",
    "@birchill/normal-jp": "^1.2.1",
    "idb-keyval": "^5.0.1",
    "preact": "^10.5.10",
    "rollbar": "^2.19.3",
    "tailwindcss": "^1.9.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true
  },
  "goodBundle": {
    "assets": {
      "hikibiki.js": "./dist/hikibiki.*.js",
      "worker.js": "./dist/worker.*.js",
      "hikibiki.css": "./dist/hikibiki.*.css"
    },
    "output": {
      "format": [
        "csv",
        "json"
      ],
      "project": "hikibiki",
      "bucket": "bundlesize-stack-bundlestatsbucket-15h4d77z8q1hr",
      "destDir": "hikibiki",
      "region": "us-west-2"
    },
    "stats": "webpack-stats.json"
  }
}
